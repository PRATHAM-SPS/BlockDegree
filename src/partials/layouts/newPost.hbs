{{> includes/hero hero-title="New Blog Post"}}
<section>
    <br>
    <h3 style="text-align: center"><strong>BLOG DETAILS</strong></h3>
    <br>
    <input class="form-control" type="text" name="topics" id="topics"
        placeholder="Enter Topics seperated by ',' or ';'"><br>
    <input class="form-control" type="text" name="title" id="title" placeholder="Enter Title"><br>
    <textarea class="form-control" id="desc" name="desc" placeholder="Enter a short Descrition..."></textarea>
    <br>
    <h3 style="text-align: center"><strong>BLOG EDITOR</strong></h3>
    <br>
    <textarea id="blog-content"></textarea>
    <br>
    <script>
        CKEDITOR.replace('blog-content');
    </script>
    <button class="btn" onclick="saveDraft()">Save Draft</button>
    <button class="btn" onclick="submitArticle()">Submit</button>
</section>
<script>
    function saveDraft() { // save a blog as draft
        const blog_id = window.location.href.split("?")[1].split("=")[1];
        const topics = document.getElementById("topics").value.split(/[\,\;]+/);
        const title = document.getElementById("title").value;
        const desc = document.getElementById("desc").value;
        $.ajax({
            method: "post",
            url: "/api/blogs/saveDraft",
            data: {
                content: CKEDITOR.instances['blog-content'].getData(),
                blog_id: blog_id,
                topics: topics,
                title: title,
